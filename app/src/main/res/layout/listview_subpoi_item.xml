<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bgSplash"
    android:layout_height="wrap_content">

    <!--
    Klik kanan layout - New - Layout Resources file
    -->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:layout_margin="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/andi"
                android:visibility="gone"

                android:id="@+id/logoPOI"
                android:padding="2dp"
                android:layout_marginRight="2dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:layout_marginRight="30dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:id="@+id/namaPOI"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/logoPOI"
                android:layout_toEndOf="@+id/logoPOI"
                android:textStyle="bold" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:layout_marginRight="30dp"
                android:textStyle="italic"
                android:text=""
                android:id="@+id/addressPOI"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/logoPOI"
                android:layout_below="@+id/namaPOI" />

            <TextView
                android:id="@+id/idPOI"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_below="@+id/addressPOI"
                android:text="0"
                android:visibility="invisible"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="2dp"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true" />

            <!-- Rightend Arrow -->
            <ImageView android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>